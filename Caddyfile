{$DOMAIN} {
    handle /api/* {
		reverse_proxy backend:8000
	}

	handle_path /games* {
		root * /srv/builds
		file_server browse

		# Set Content-Encoding for Brotli compressed .br files
        @brotli {
            path *.br
        }
        header @brotli {
            Content-Encoding br
        }

        # Set Content-Type for .wasm files
        @wasm {
            path *.wasm
        }
        header @wasm {
            Content-Type application/wasm
        }

        # Handle Brotli compressed .wasm files (i.e., .wasm.br)
        @brotli_wasm {
            path *.wasm.br
        }
        header @brotli_wasm {
            Content-Encoding br
            Content-Type application/wasm
        }

	}


	# Обработка ошибок
	handle_errors {
		respond "{err.status_code} {err.status_text}"
	}
}
